<?xml version="1.0" encoding="utf-8" ?>
<component name="SearchView" extends="Group">
  <interface>
    <field id="searching" type="boolean" alwaysNotify="true"/>    
    <field id="showSpinner" type="boolean" alwaysNotify="true"/>    
    <field id="keyboardText" type="string" alias="searchKeyboard.text" alwaysNotify="true"/>
    <field id="listData" type="node" alwaysNotify="true"/>
    <function name="focusList"/>
    <function name="focusKeyboard"/>
  </interface>
  <script type="text/brightscript" uri="pkg:/components/views/searchView.brs"/>
  <children>
    <Rectangle color="#171717" width="1920" height="1080" translation="[0,0]">          
      <Rectangle color="#FFFFFF1A" opacity="1" width="430" height="50" translation="[115,100]"/>
      <Label id="LabelText" text="" width="420" height="50" horizAlign="left" vertAlign="center" translation="[122,100]" wrap="true"/>
      <MiniKeyboard id="searchKeyboard" lowerCase="true" translation="[100,180]" scale="[0.8,0.8]" showTextEditBox="false"/>
      <RowList
        id="searchList"
        rowTitleComponentName="rowTitleItem"
        drawFocusFeedback="true"
        showRowCounter="[false]"
        translation="[600,200]"
        vertFocusAnimationStyle="floatingFocus"
        itemComponentName="SearchItem"        
        itemSize="[1300,500]"
        rowHeights="[500]"
        numRows="1"
        rowItemSize="[[240,320]]"
        rowItemSpacing="[[20,0]]"
        focusXOffset="[90]"
        rowLabelOffset="[ [90, 0] ]"
        showRowLabel="[true,false]"/>
      <!-- <BusySpinner id="spinner" clockwise="true" spinInterval="0.8" visible="true"/> -->
      <!-- <Label id="noResultsLabel" horizAlign="left" vertAlign="top" visible="false" color="#eeeeee" translation="[860,200]" width="990" wrap="true">
        <Font role="font" id="buttonFont" uri="pkg:/fonts/FuturaLTPro-Book.ttf" size="32"/>
      </Label> -->
    </Rectangle>
    <Timer id="inputTimer" repeat="false" duration="0.8"/>
  </children>
</component>
